<script>
    require('weex-components');
    var wee = require('@weex-module/modal');
    var api = require("../../common/api.we");
    module.exports = {
        data: {
            dir:api.dir,
            yzm:true,
            date: {
                s: 60,
            },
            flag: true,
            tel: "",
            yanzheng: "",
        },
        methods: {
            oninput1: function (event) {
                this.tel = event.value;
            },
            oninput2: function (event) {
                this.yanzheng = event.value;
            },
            denglu: function (e) {
                var self = this;
                if (!self.flag) {
                    api.tost("请同意《一修车管家用户协议》");
                    return;
                }
//            -----------------------登录-----------------------------------
                api.call("factory/login", {cellphone: self.tel, password: self.yanzheng}, function (ret) {
//                        存储值
                    api.save("token", ret.data.adviserInfo.token);
//                        跳转页面
                    api.log(ret.data.adviserInfo.factoryId);
//                    api.push("fuwudd.js", {
//                        title:"退出"
//                    });
                    require('@weex-module/finish').finLis();
                });

//            -----------------------登录-----------------------------------
            },
            duanxuan: function (e) {
                var self = this;
                self.flag = !self.flag;
            },
            getclick: function (e) {
                this.yzm = false;
                this.djsfunc();
            },
            djsfunc: function (e) {
                var self = this;
                var s = self.date.s;
                timer = setInterval(function (e) {
                    if (s <= 0) {
                        clearInterval(timer);
                        self.date.s = 60;
                        self.yzm = true;
                        return;
                    } else {
                        s--;
                    }
                    self.date.s = s;
                }, 1000);
            }
        },
        ready: function () {
        }
    }
</script>