            <input class="inp" type="tel" placeholder="验证码" oninput="oninput2" value="{{yanzheng}}"/>
            <!--<text if={{yzm}} class="yanzhengma" onclick="getclick">获取验证码</text>-->
            <!--<text if={{!yzm}} class="yanzhengma">剩余{{date.s}}</text>-->
        </div>
        <div style="height: 40px;"></div>
        <div class="row" onclick="duanxuan">
            <image if={{flag}} class="xieyi"
                   src="{{dir}}images/danxuan2.png"></image>
            <image if={{!flag}} class="xieyi"
                   src="{{dir}}images/danxuan3.png"></image>
            <text class="txt">我已阅读并同意</text>
            <text class="txt red">《一修车管家用户协议》</text>
