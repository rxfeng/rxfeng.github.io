<template>
    <xx-navpage navtitle="我的爱车" navrighttitle="" navlefturl="wode.js" navrighturl=" " navleftsrc="{{dir}}images/fanhui.png" bg="">
        <scroller style="flex:1;">
            <text class="righttxt" onclick="righttxtclick">{{righttxt}}</text>
            <zi-wodeaiche repeat ={{car}} jiantou={{jiantou}} del={{del}}></zi-wodeaiche>
            <div style="height: 20px;background-color: #fff;margin-top: -20px"></div>
            <div class="btn" onclick="tianjiacheliang">
                <text class="bold red">＋</text>
                <text style="font-size: 36px;" class="red">增加车辆</text>
            </div>
        </scroller>
    </xx-navpage>
</template>
<style>
    .btn {
        margin-left: 30px;
        margin-right: 30px;
        margin-top: 100px;
        margin-bottom: 300px;
        padding-bottom: 20px;
        padding-top: 20px;
        border-radius: 10px;
        flex-direction: row;
        justify-content: center;
        border-width: 1px;
        border-color: #E95412;
        color: #E95412;
    }

    .righttxt {
        position: fixed;
        top: 20px;
        right: 40px;
        font-size: 34px;
        color: #fff;
    }

    .bold {
        font-weight: bold;
    }

    .red {
        color: #E95412;
    }
</style>
<script>
    require('weex-components');
    var api = require("../../common/api.we");
    module.exports = {
        data: {
            dir: api.dir,
            righttxt: "编辑",
            fanhuiurl: "wodezuojia.js",
            del: false,
            jiantou: true,
            car: []
        },
        methods: {
            tianjiacheliang: function (e) {
                api.push("tianjiacheliang.js");
            },
            righttxtclick: function (e) {
                var _this = this;
                if (_this.righttxt == "编辑") {
                    _this.del = true;
                    _this.jiantou = false;
                    _this.righttxt = "取消";
                } else if (_this.righttxt == "取消") {
                    _this.del = false;
                    _this.jiantou = true;
                    _this.righttxt = "编辑";
                }
            }
        },
        ready: function () {
            var _this = this;
//            -----------------------我的爱车列表-----------------------------------
            api.call("user/getMyCar", {}, function (ret) {
                api.log(ret.data.myCarInfo.length)
                _this.car = ret.data.myCarInfo;
            }, function () {});
//            -----------------------我的爱车列表-----------------------------------
//            -----------------------删除数据-----------------------------------
            _this.$on('notify', function (e) {
                api.call("user/getMyCar", {}, function (ret) {
                    _this.car = ret.data.myCarInfo;
                }, function () {});
            })
//            -----------------------删除数据-----------------------------------
        }
    }
</script>