                <div class="title" onclick="xichebox">
                    <text class="title-txt">全部</text>
                </div>
                <div class="title" onclick="xichebox">
                    <text class="title-txt">洗车美容</text>
                </div>
                <div class="title" onclick="xichebox">
                    <text class="title-txt">4S店</text>
                </div>
                <div class="title" onclick="xichebox">
                    <text class="title-txt">专修店</text>
                </div>
            </div>
            <div class="box" if={{chengqu}}>
                <scroller
                        style="height: 1020px;border-top-width:2px;border-color: #e6e6e6">
                    <div class="title" onclick="chequbox" repeat={{cityData}}>
                        <text class="title-txt center">{{area}}</text>
                    </div>
                </scroller>
            </div>
            <div class="box" if="{{paixu}}">
                <div class="title" style="border-top-width: 2px; border-color: #e6e6e6"
                     onclick="paixubox">
                    <text class="title-txt right">智能排序</text>
                </div>
                <div class="title" onclick="paixubox">
                    <text class="title-txt right">距离排序</text>
                </div>
                <div class="title" onclick="paixubox">
                    <text class="title-txt right">星级排序</text>
                </div>
                <div class="title" onclick="paixubox">
                    <text class="title-txt right">人气排序</text>
                </div>
            </div>
            <!--洗车-->
            <div style="position: absolute; margin-top: 88px;">
                <list style="flex: 1" onscrolled="onseclled">
                    <refresh
                            class="refresh-view" display="{{refresh_display}}"
                            onrefresh="datarefresh">
                        <loading-indicator
                                style="height:60;width:60;color:red"></loading-indicator>
                    </refresh>
                    <cell style="position: relative" index="{{$index}}">
                        <sy-neirong2
                                repeat={{serverData}} xuanze='{{xuanze}}' txt1={{txt1}}></sy-neirong2>
                        <div class="spane"></div>
                    </cell>
                </list>
            </div>
        </scroller>
        <div class="quan" if={{quan}} onclick="mengbanclick"></div>
    </xx-navpage>
</template>
<style>
    .sousuo {
        width: 550px;
        height: 70px;
        background-color: #F8C09B;
        position: fixed;
        top: 9px;
        left: 100px;
        border-radius: 5px;
        flex-direction: row;
    }

    .sousuo-pic {
        width: 60px;
        height: 60px;
    }

    .dwimg {
        width: 60px;
        height: 60px;
        position: fixed;
        top: 20px;
        right: 20px;
    }

    .sousuo-inp {
        width: 450px;
        height: 70px;
        placeholder-color: #fff;
        font-size: 28px;
        color: #fff;
    }

    .quan {
        width: 750px;
        flex: 1;
        backgroundColor: rgba(0, 0, 0, 0.5);
    }

    .box {
        width: 750px;
        position: fixed;
        top: 169px;
        background-color: #fff;
    }

    .title {
        padding-top: 20px;
        padding-bottom: 15px;
        margin-right: 40px;
        margin-left: 40px;
        borderBottomWidth: 2px;
        borderColor: #e6e6e6;
    }

    .title-txt {
        font-size: 30px;
        color: #737373;
    }

    .zhuangtai {
        flex-direction: row;
        border-bottom-width: 2px;
        border-color: #e6e6e6;
        backgroundColor: #fff;
        position: fixed;
        width: 750px;
        top: 88px;
    }

    .zt {
        flex-direction: row;
        flex: 1;
        margin-top: 20px;
        margin-bottom: 20px;
        border-right-width: 2px;
        border-color: #ccc;
        justify-content: center;
    }

    .zt-txt {
        font-size: 34px;
        color: #373634;
    }

    .jiantou {
        width: 37px;
        height: 37px;
        margin-left: 10px;
    }

    .spane {
        height: 10px;
        backgroundColor: #fff;
