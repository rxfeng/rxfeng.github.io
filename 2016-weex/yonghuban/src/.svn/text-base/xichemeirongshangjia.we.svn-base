        transform: rotate(180deg);
    }

    .red {
        color: #E95412;
    }

    .dianpu {
        width: 170px;
        background: rgba(255, 255, 255, 0.4);
        position: absolute;
        top: 182px;
        left: 30px;
    }

    .center {
        text-align: center;
    }

    .right {
        text-align: right;
    }

    .dianpu-txt {
        color: #E95412;
        font-size: 26px;
        text-align: center;
