                        _this.rq = ret.data.myCarInfo[i].carGotTime.slice(0, 10);
                        _this.isfuwu = ret.data.myCarInfo[i].inServiceOrderId;
                    }
                }
            });

//            api.call("user/getMyCar", {}, function (ret) {
