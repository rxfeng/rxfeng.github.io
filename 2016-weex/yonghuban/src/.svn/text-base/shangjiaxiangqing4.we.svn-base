                    <div class="row" style="position: relative">
                        <hlist id="alist" onscrolled="scrolled" style="height: 50px;" >
                            <cell class="rowtime" repeat={{shijian}}>
                                <div onclick="itemClick" index="{{$index}}" style="width: 250px;">
