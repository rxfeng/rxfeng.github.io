              this.sousuo = !this.sousuo;
                this.val = "";
            },
            clrclick: function (e) {
              this.val = "";
            },
            sousuoclick: function (e) {
                var _this = this;
                _this.serverData=[];
//                var info = {keyword: _this.val, type: _this.txt1, area: _this.txt2, sort: _this.rank}
