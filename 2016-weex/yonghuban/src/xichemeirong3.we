        methods: {
            onseclled: function (e) {
                var sx = e.data.rangeHeight - e.data.height - e.data.offsetY;
                if (sx < 50) {
                    this.loadMore();
                }
            },
            datarefresh: function (e) {
                this.refresh_display = "show"
                this.page = 1;
                this.loaddata();

            },
            loadMore: function (e) {
                api.log(this.page);
                var _this = this;
                this.page++;
                this.loaddata();
            },
            loaddata: function (e) {
                var _this = this;
                var info = {
                    keyword:_this.val,
                    type: 9,
                    sort: _this.rank,
                    page: _this.page,
                    carId:_this.cheid,
                }
                api.call("factory/list", info, function (ret) {
                    if(ret.data.datas==""){
                        _this.fh = true;
                    }else{
                        _this.fh = false;
                    }
                    if (_this.page == 1) {
                        if (ret.data.requestCode != 0) {
                            _this.fh = true;
                            _this.serverData = [];
                        } else {
                            _this.fh = false;
                            _this.serverData = ret.data.datas;
                        }
                    } else {
                        _this.fh = false;
                        if (ret.data.requestCode == 0) {
                            _this.serverData = _this.serverData
                                    .concat(ret.data.datas);
                        }
                    }
                    _this.refresh_display = 'hide';
                }, function (e) {
                    _this.refresh_display = 'hide';
                });
            },
            oninput1: function (event) {
                this.val = event.value;
            },
            dwclick: function (e) {
//                if(this.txt2 ==""){
//                    this.txt2= "苏州市";
//                }
                this.leftdata = {city: this.txt2, keyword: this.val, type: this.txt1}
