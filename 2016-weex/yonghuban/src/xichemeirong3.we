                    }
                    _this.serverData = ret.data.datas;
                }, function (e) {
                });
            },
            paixubox: function (e) {
                api.log(e.target.children[0].attr.value);
                if (e.target.children[0].attr.value == "智能排序") {
                    this.rank = 1;
